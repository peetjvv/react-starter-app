{
  "name": "react-starter",
  "version": "0.0.1",
  "description": "Basic starter react app",
  "main": "index.tsx",
  "scripts": {
    "test": "jest --coverage",
    "start": "webpack serve --env development --mode=development --host 0.0.0.0",
    "clean": "rimraf build",
    "webpack-build": "webpack --env production --mode=production",
    "build": "npm run clean && npm run webpack-build",
    "eslint": "eslint src --color --cache",
    "eslint:fix": "npm run lint -- --fix",
    "serve": "npm run build && http-server build --proxy http://localhost:8080?",
    "prepare": "husky install"
  },
  "author": "Peet Janse van Vuuren",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx,json,scss,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "json-loader": "^0.5.7",
    "lint-staged": "^14.0.0",
    "modernizr-loader": "^1.0.1",
    "prettier": "^2.8.1",
    "rimraf": "^5.0.1",
    "sass": "^1.66.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
