{
  "name": "react-starter",
  "version": "0.0.1",
  "description": "Basic starter react app",
  "main": "index.tsx",
  "scripts": {
    "test": "jest --coverage",
    "start": "webpack serve --env development --mode=development --host 0.0.0.0",
    "clean": "rimraf build",
    "webpack-build": "webpack --env production --mode=production",
    "build": "npm run clean && npm run webpack-build",
    "eslint": "eslint src --color --cache",
    "eslint:fix": "npm run lint -- --fix"
  },
  "author": "Peet Janse van Vuuren",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,scss,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.31.0",
    "eslint-plugin-react": "^7.31.11",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.3.8",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "json-loader": "^0.5.7",
    "lint-staged": "^12.5.0",
    "modernizr-loader": "^1.0.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
